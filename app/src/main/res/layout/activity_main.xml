<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/default_image_size"
        android:layout_height="@dimen/default_image_size"
        android:text="Hello World!"
        android:id="@+id/ivCatPic"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        tools:src="@mipmap/ic_launcher_round"
        android:contentDescription="@string/cat_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pbImageLoading"
        android:layout_width="@dimen/default_progess_size"
        android:layout_height="@dimen/default_progess_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCatPic" />


</androidx.constraintlayout.widget.ConstraintLayout>